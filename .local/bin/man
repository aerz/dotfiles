#!/usr/bin/env bash
#
# https://github.com/junegunn/fzf/wiki/examples#man-pages

[[ $# -gt 0 ]] && /usr/bin/man "${@}" && exit

/usr/bin/man -k . | \
    fzf -q "$1" --prompt='‚ùØ '  --preview $'echo {} | tr -d \'()\' | awk \'{printf "%s ", $2} {print $1}\' | xargs -r /usr/bin/man | col -bx | bat -l man -p --color always' | \
    tr -d '()' | awk '{printf "%s ", $2} {print $1}' | xargs -r /usr/bin/man
